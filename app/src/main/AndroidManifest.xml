<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com1032.cw1.me00423.me00423_todolist">

    <application
        android:name="android.support.multidex.MultiDexApplication"
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GeneralActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_general"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ShoppingActivity"
            android:label="@string/title_activity_shopping"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PartyActivity"
            android:label="@string/title_activity_party"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".EditorActivity" />
        <activity android:name=".CreatePasscodeActivity"
            android:theme="@style/Theme.AppCompat"/>
        <activity android:name=".EnterPasscodeActivity"
            android:theme="@style/Theme.AppCompat"/>
        <activity android:name=".PassCheckActivity"
            android:theme="@style/Theme.AppCompat"/>
        <activity
            android:name=".SecretActivity"
            android:label="@string/title_activity_secret"
            android:theme="@style/Theme.AppCompat.NoActionBar"></activity>
    </application>

</manifest>